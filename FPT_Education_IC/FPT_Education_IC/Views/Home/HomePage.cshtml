@using FPT_Education_IC.Data;
@{
    var emrSession = ViewBag.EmrSession as EmrSession;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trang chủ - FPTEIC</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="icon" type="/image/x-icon" href="/assets/img/favicon.png" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
</head>
<body class="nav-fixed">
    @Html.Partial("_Header", emrSession)
    <div id="layoutSidenav">
        @Html.Partial("_Menu", emrSession)
        @Html.Partial("_Index", emrSession)
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script>
        const slider = document.querySelector(".slider");
        const images = document.querySelectorAll(".slider img");
        let counter = 1;
        const slideWidth = images[0].clientWidth;

        // Update initial position
        slider.style.transform = `translateX(${-slideWidth * counter}px)`;

        function nextSlide() {
            if (counter >= images.length - 1) {
                // Move to the cloned first image and reset counter
                slider.style.transition = "none";
                counter = 1;
                slider.style.transform = `translateX(${-slideWidth * counter}px)`;
            } else {
                slider.style.transition = "transform 0.5s ease-in-out";
                counter++;
                slider.style.transform = `translateX(${-slideWidth * counter}px)`;
            }
        }

        function prevSlide() {
            if (counter <= 0) {
                // Move to the cloned last image and reset counter
                slider.style.transition = "none";
                counter = images.length - 2;
                slider.style.transform = `translateX(${-slideWidth * counter}px)`;
            } else {
                slider.style.transition = "transform 0.5s ease-in-out";
                counter--;
                slider.style.transform = `translateX(${-slideWidth * counter}px)`;
            }
        }
    </script>
</body>
</html>
