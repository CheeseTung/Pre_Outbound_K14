                                                                }
                                                                else if (item.ContactLevel == 2)
                                                                {
                                                                    <span class="levelContact">Quản lý</span>
                                                                }
                                                                else if (item.ContactLevel == 3)
                                                                {
                                                                    <span class="levelContact">Liên lạc</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="levelContact">Khác</span>
